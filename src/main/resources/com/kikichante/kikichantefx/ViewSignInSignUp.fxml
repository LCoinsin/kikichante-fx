<AnchorPane prefHeight="656.0" prefWidth="1147.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kikichante.controller.ControllerSigninSignup">
    <children>
        <VBox fx:id="VBoxTextFieldConnexion" layoutX="253.0" layoutY="142.0" prefHeight="176.0" prefWidth="642.0">
