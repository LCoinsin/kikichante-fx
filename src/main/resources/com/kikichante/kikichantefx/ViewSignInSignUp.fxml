                <TextField fx:id="textfieldConnexionUsername" onKeyReleased="#deleteErrorKey" onMouseClicked="#deleteErrorMouse" prefHeight="65.0" prefWidth="642.0" promptText="Username" styleClass="textfieldBig, textfieldWhite, textfieldStyle">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </TextField>
            <PasswordField fx:id="textfieldConnexionPassword" onKeyReleased="#deleteErrorKey" onMouseClicked="#deleteErrorMouse" prefHeight="65.0" prefWidth="642.0" promptText="Password">
               <styleClass>
                  <String fx:value="textfieldBig" />
                  <String fx:value="textfieldWhite" />
                  <String fx:value="textfieldStyle" />
               </styleClass>
            </PasswordField>
            </children>
        </VBox>

        <VBox fx:id="VBoxTextFieldInscription" disable="true" layoutX="447.0" layoutY="185.0" prefHeight="265.0" prefWidth="642.0" visible="false">
            <children>
                <TextField fx:id="textfieldInscriptionUsername" onKeyReleased="#deleteErrorKey" onMouseClicked="#deleteErrorMouse" prefHeight="65.0" prefWidth="642.0" promptText="Username" styleClass="textfieldBig, textfieldWhite, textfieldStyle">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </TextField>
                <PasswordField fx:id="textfieldInscriptionPassword" onKeyReleased="#deleteErrorKey" onMouseClicked="#deleteErrorMouse" prefHeight="65.0" prefWidth="642.0" promptText="Password" styleClass="textfieldBig, textfieldWhite, textfieldStyle">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </PasswordField>
                <PasswordField fx:id="textfieldInscriptionPasswordConfirm" onKeyReleased="#deleteErrorKey" onMouseClicked="#deleteErrorMouse" prefHeight="65.0" prefWidth="642.0" promptText="Password confirmation" styleClass="textfieldBig, textfieldWhite, textfieldStyle">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </PasswordField>
            </children>
        </VBox>

        <VBox fx:id="VBoxButtonConnexion" layoutX="195.0" layoutY="418.0" prefHeight="157.0" prefWidth="758.0">
            <children>
                <Button fx:id="buttonConnexion" alignment="CENTER" mnemonicParsing="false" onAction="#onClickConnexion" prefHeight="88.0" prefWidth="758.0" styleClass="buttonGreen, buttonBig, buttonStyle" text="Connexion" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button id="switchToInscription" mnemonicParsing="false" onAction="#onClickSwitchToInscription" prefHeight="50.0" prefWidth="758.0" styleClass="buttonMedium, buttonYellow, buttonStyle" text="Inscription" />
            </children>
        </VBox>

        <VBox fx:id="VBoxButtonInscription" disable="true" layoutX="389.0" layoutY="496.0" prefHeight="168.0" prefWidth="758.0" visible="false">
            <children>
                <Button fx:id="buttonIncription" alignment="CENTER" mnemonicParsing="false" onAction="#onClickInscription" prefHeight="88.0" prefWidth="758.0" styleClass="buttonGreen, buttonBig, buttonStyle" text="Incription" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button id="switchToConnexion" mnemonicParsing="false" onAction="#onClickSwicthToConnexion" prefHeight="50.0" prefWidth="758.0" styleClass="buttonMedium, buttonYellow, buttonStyle" text="Connexion" />
