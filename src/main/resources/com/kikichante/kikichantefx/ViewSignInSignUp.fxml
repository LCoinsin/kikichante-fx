      <ImageView fx:id="imageCode" fitHeight="108.0" fitWidth="143.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../video/logo%20kikichante.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
