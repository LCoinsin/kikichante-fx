                <Label fx:id="titleTest" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" text="Kikichante" textAlignment="CENTER" textFill="#efe9e9">
                    <font>
                        <Font name="Book Antiqua" size="49.0" />
                    </font>
            </Label>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#onClickGotoJoinGameList" prefHeight="66.0" prefWidth="154.0" text="Join Game">
               <font>
                  <Font name="Arial Nova Light" size="24.0" />
               </font></Button>
                <HBox alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onClickGotoStatistique" prefHeight="68.0" prefWidth="154.0" text="Statistique">
                     <font>
                        <Font size="24.0" />
                     </font></Button>
